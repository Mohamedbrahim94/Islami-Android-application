<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    >

    <ImageView
        android:id="@+id/sura_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/item_quraan_name_bg"
        />
    <TextView
        android:id="@+id/sura_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/sura_background"
        app:layout_constraintBottom_toBottomOf="@id/sura_background"
        app:layout_constraintStart_toStartOf="@id/sura_background"
        app:layout_constraintEnd_toEndOf="@id/sura_background"
        tools:text="الفاتحة"

        />





</androidx.constraintlayout.widget.ConstraintLayout>